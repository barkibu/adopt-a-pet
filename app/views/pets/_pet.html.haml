= link_to pet, class: 'card' do
  - if pet.urgent?
    .ribbon-wrapper
      .ribbon URGENTE
  - if pet.pet_pictures.any?
    .card-image
      = image_tag pet.pet_pictures.first.asset.url(:home)
  .card-header
    = pet.name
  .card-copy
    %p= simple_format pet.description
  .card-stats
    %ul
      - if pet.age?
        %li
          = pet.age
          %span Edad
      - if pet.size?
        %li
          = pet.size
          %span Tama√±o
      - if pet.location?
        %li
          = pet.location
          %span Lugar
